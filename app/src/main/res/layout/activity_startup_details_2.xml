<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_startup_reg"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".StartupDetails2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Faculty Details: "
        android:textSize="20dp"
        android:layout_gravity="start"
        />

    <EditText
        android:id="@+id/et_faculty_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:background="#81000C0C"
        android:hint="Faculty Name"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral_variant70" />

    <EditText
        android:id="@+id/et_faculty_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:background="#81000E0E"
        android:hint="Faculty Email"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral_variant70" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:text="Team Member Details: "
        android:textSize="20dp"
        android:layout_gravity="start"
        />

    <EditText
        android:id="@+id/et_me_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:background="#81000E0E"
        android:hint="Member 1 Email"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral_variant70" />


    <EditText
        android:id="@+id/et_me_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:background="#81000E0E"
        android:hint="Member 2 Email"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral_variant70" />

    <EditText
        android:id="@+id/et_me_3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:background="#81000E0E"
        android:hint="Member 3 Email"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral_variant70" />


    <EditText
        android:id="@+id/et_me_4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#81000E0E"
        android:hint="Member 4 Email"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral_variant70" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:text="Industry Category: "
        android:textSize="20dp"
        android:layout_gravity="start"
        />

    <EditText
        android:id="@+id/et_industry_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="40dp"
        android:background="#81000E0E"
        android:hint="Industry Name"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral_variant70" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_td_previous"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Previous"
            android:layout_gravity="start"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/design_default_color_error"
            />

        <Button
            android:id="@+id/btn_td_submit"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Submit"
            android:layout_gravity="end"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:backgroundTint="@color/purple_700"
            />


    </LinearLayout>



</LinearLayout>