<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background_startup_reg"
    tools:context=".ManageTeamActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:text="Manage Teams"
        android:textSize="60dp"
        android:textColor="@color/black"
        android:textFontWeight="800"
        android:fontFamily="@font/agatha_font"/>

    <Button
        android:id="@+id/btn_add_team"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Add Team"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:backgroundTint="@color/purple_700"
        app:cornerRadius = "40dp"
        />
    <Button
        android:id="@+id/btn_remove_team"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Remove Team"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:backgroundTint="@color/purple_700"
        app:cornerRadius = "40dp"
        />
    <Button
        android:id="@+id/btn_team_status"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Application Status"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:backgroundTint="@color/purple_700"
        app:cornerRadius = "40dp"
        />







</LinearLayout>